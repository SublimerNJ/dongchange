/* common */

:root {
    --main_color: #084784;
    --sub_font:   "Playfair Display", Pretendard Variable, Pretendard, sans-serif;
}

.container {max-width: 1500px; width: 100%; box-sizing: border-box; margin: 0 auto;}

.pagination {margin-top: 65px;}
.pagination ul {display: flex; justify-content: center; gap: 10px;}
.pagination ul .prev {margin-right: 26px;}
.pagination > ul > li {display: flex; align-items: center;}
.pagination ul ol {margin-right: 26px; display: flex; gap: 20px; align-items: center;}
.pagination ul ol li a {font-size: 17px; font-weight: 300;}
.pagination ul ol li.active a {font-size: 17px; font-weight: 700; position: relative;}
.pagination ul ol li.active a::after {width: 100%; display: block; position: absolute; content: ''; bottom: 0; left: 0; height: 2px; background: #131313;}


.board_detail .container {max-width: 1400px;}
.board_detail .tag_box {display: flex; gap: 14px; align-items: center; border-radius: 70px; background: #F7F8FC; width: fit-content; padding-right: 20px; margin-bottom: 24px;}
.board_detail .tag_box .icon {width: 34px; height: 34px; display: flex; align-items: center; justify-content: center; border-radius: 100%; background: #fff; box-shadow: 0px 3.091px 7.727px 0px rgba(0, 118, 191, 0.10);}
.board_detail .tag_box p {font-size: 17px; font-weight: 600; color: var(--main_color)}
.board_detail .tag_box .arrow {display: flex; align-items: center;}
.board_detail .tag_box .arrow img {height: 20px;}
.board_detail .title {display: flex; justify-content: space-between; align-items: center; gap: 20px; margin-bottom: 60px;}
.board_detail .title .subject {display: flex; align-items: center; gap: 10px;}
.board_detail .title .subject .notice {padding: 4px 6px; box-sizing: border-box; border-radius: 5px; background: var(--main_color); color: #fff; font-weight: 700; font-size: 16px;}
.board_detail .title .subject h3 {font-size: 34px; font-weight: 600; line-height: 1.5;}
.board_detail .title .date span {font-size: 14px; color: #A8A8A8;}
.board_detail .content {margin-bottom: 170px;word-break:break-all}
.board_detail .content * {word-break:break-all}
.board_detail .item_box {margin-bottom: 80px;}
.board_detail .item_box > h3 {font-size: 32px; font-weight: 700; padding: 10px; box-sizing: border-box; border-bottom: 1px solid #DBDBDB; margin-bottom: 24px;}
.board_detail .item_1 article {font-size: 20px; color: #434343; line-height: 1.5;}
.board_detail .item_2 > p {font-size: 24px; font-weight: 700; color: var(--main_color); padding-left: 15px; position: relative; margin-bottom: 15px;}
.board_detail .item_2 > p::before {position: absolute; left: 0; top: 50%; transform: translateY(-50%); border-radius: 100%; width: 4px; height: 4px; background: var(--main_color); display: block; content: '';}
.board_detail .item_2 ul {display: flex; flex-wrap: wrap; row-gap: 34px; column-gap: 24px; margin-bottom: 50px;}
.board_detail .item_2 ul:last-child {margin-bottom: 0;}
.board_detail .item_2 ul li {width: calc(25% - 18px);}
.board_detail .item_2 ul li .img_box {margin-bottom: 20px;}
.board_detail .item_2 ul li .img_box img {width: 100%;}
.board_detail .item_2 ul li .text_box > span {font-size: 20px; color: #778392; display: block; margin-bottom: 10px;}
.board_detail .item_2 ul li .text_box > p {font-size: 24px; font-weight: 700; color: #3C3C3C;}
.board_detail .item_3 ul {display: flex; align-items: center; gap: 24px;}
.board_detail .item_3 ul li {list-style: inside; color: var(--main_color); font-size: 24px;}
.board_detail .item_4 ul {display: flex; align-items: center; gap: 24px; flex-wrap: wrap;}
.board_detail .item_4 ul li {width: calc(25% - 18px);}
.board_detail .item_4 ul li .img_box {margin-bottom: 20px;}
.board_detail .item_4 ul li .img_box img {width: 100%;}
.board_detail .item_4 ul li p {font-size: 24px; font-weight: 700; margin-bottom: 14px;}
.board_detail .item_4 ul li article {font-size: 17px; color: #707070; line-height: 1.5; font-weight: 500;}
.board_detail .item_5 ul li {margin-bottom: 14px;}
.board_detail .item_5 ul li:last-child {margin-bottom: 0;}
.board_detail .item_5 ul li a {display: flex; align-items: center; gap: 10px;}
.board_detail .item_5 ul li a p {font-size: 20px; font-weight: 700; color: var(--main_color); overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}

.board_detail .item_6 ul li a {display: flex; align-items: center; justify-content: space-between; padding: 14px 24px; box-sizing: border-box; background: #E9EFF5; border-radius: 5px;
}
.board_detail .item_6 ul li a p {font-size: 20px; font-weight: 600; color: var(--main_color)}
.board_detail .btn_box {margin: 100px 0px 0px; display: flex; justify-content: flex-end;}
.board_detail .btn_box a {display: flex; justify-content: center; padding: 12px 0px; box-sizing: border-box; width: 140px; border: 1.5px solid #DBDBDB; font-size: 17px; font-weight: 700; color: #686868;}
.board_detail .control_box {margin-top: 34px; border-top: 1.5px solid #DBDBDB;}
.board_detail .control_box .item {padding: 24px 34px; display: flex; align-items: center; box-sizing: border-box; border-bottom: 1.5px solid #DBDBDB;}
.board_detail .control_box .item img {margin-right: 24px;}
.board_detail .control_box .item span {margin-right: 10px; font-size: 16px; font-weight: 700; color: #808080; white-space: nowrap;}
.board_detail .control_box .item a {display: block; font-size: 20px; color: #343434; font-weight: 600; line-height: 1.5; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}

/* 에디터 초기화 */
.board_detail .content h1,
.board_detail .content h2,
.board_detail .content h3,
.board_detail .content h4,
.board_detail .content h5,
.board_detail .content h6 {font-weight:bold;margin:1.2em 0 0.6em;font-size:1.5em}
.board_detail .content p {margin-bottom:1em;line-height:1.7}
.board_detail .content ul, .board_detail .content ol {margin:1em 0 1em 2em;padding:0}
.board_detail .content ul {list-style-type:disc}
.board_detail .content ol {list-style-type:decimal}
.board_detail .content li {margin-bottom:0.4em;line-height:1.6;list-style:unset}
.board_detail .content blockquote {padding:10px 20px;margin:20px 0;border-left:5px solid #ccc;background:#f9f9f9;color:#555}
.board_detail .content img {max-width:100%;height:auto}
.board_detail .content :is(dir, menu, ol, ul) ul {list-style-type: circle}
.board_detail .content :is(dir, dl, menu, ol, ul) ul {margin-block-start: 0px;margin-block-end: 0px;}

@media (max-width: 768px) {

    .pagination {margin-top: 30px;}
    .pagination ul {gap: 0;}
    .pagination ul ol {gap: 12px; margin-right: 0;}
    .pagination ul ol li.active a,
    .pagination ul ol li a {font-size: 13px;}
    .pagination ul .prev {margin-right: 0;}

}